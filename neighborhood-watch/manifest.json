{
    "manifest_version": 3,
    "name": "Neighborhood Watch",
    "version": "1.0",
    "description": "Contribute and view crowdsourced labels signifying dark patterns",
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "background": {
      "service_worker":"scripts/firebase.js",
      "type": "module"
    },
    "action": {
      "default_icon": "images/icon.png",
      "default_popup": "popup.html",
      "default_title": "My very first chrome extension WHOOP!!"
    },
    "content_scripts": [
        {
          "js": ["scripts/popup.js", "scripts/highlight.js", "scripts/content.js"],
          "matches": [
            "<all_urls>"
          ]
        }
    ],
    "permissions": [
      "activeTab",
      "tabs"
    ]
}